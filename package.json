{
  "name": "tusmo-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start:client": "npm --workspace client start",
    "start:server": "npm --workspace server run dev",
    "start:dev": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "lint": "npm --workspace server run lint && npm --workspace client run lint"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
